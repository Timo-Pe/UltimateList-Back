{% extends 'base.html.twig' %}

{% block title %}ListItem{% endblock %}

{% block body %}
<div class="container my-4">
    <h1>ListItem {{ list_item.item }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ list_item.id }}</td>
            </tr>
            <tr>
                <th>Date d'ajout</th>
                <td>{{ list_item.itemAddedAt ? list_item.itemAddedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ list_item.itemStatus }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ list_item.itemComment }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ list_item.itemRating }}</td>
            </tr>
            <tr>
                <th>Item</th>
                <td>{{ list_item.item }}</td>
            </tr>
            <tr>
                <th>Mode</th>
                <td>{{ list_item.mode }}</td>
            </tr>
        </tbody>
    </table>
    
    <div class ="d-flex gap-1 text-center display-inline">
        <a class="btn btn-sm btn-success" href="{{ path('app_list_item_index') }}"><ion-icon name="return-down-back-outline"></ion-icon></a>
        <a class="btn btn-sm btn-warning" href="{{ path('app_list_item_edit', {'id': list_item.id}) }}"><ion-icon name="create-outline"></a>
        {{ include('list_item/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
