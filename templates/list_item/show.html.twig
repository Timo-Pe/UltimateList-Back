{% extends 'base.html.twig' %}

{% block title %}ListItem{% endblock %}

{% block body %}
    <h1>ListItem</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ list_item.id }}</td>
            </tr>
            <tr>
                <th>Item_added_at</th>
                <td>{{ list_item.itemAddedAt ? list_item.itemAddedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Item_status</th>
                <td>{{ list_item.itemStatus }}</td>
            </tr>
            <tr>
                <th>Item_comment</th>
                <td>{{ list_item.itemComment }}</td>
            </tr>
            <tr>
                <th>Item_rating</th>
                <td>{{ list_item.itemRating }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_list_item_index') }}">back to list</a>

    <a href="{{ path('app_list_item_edit', {'id': list_item.id}) }}">edit</a>

    {{ include('list_item/_delete_form.html.twig') }}
