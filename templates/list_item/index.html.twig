{% extends 'base.html.twig' %}

{% block title %}ListItem index{% endblock %}

{% block body %}
    <div class="container my-4">
    {{ include('_flash_messages.html.twig') }}
        <h1>Liste des ListItem</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Item</th>
                    <th>Date d'ajout</th>
                    <th>Statut</th>
                    <th>Commentaire</th>
                    <th>Note /10</th>
                    <th>Mode</th>
                    <th>User</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for list_item in list_items %}
                <tr>
                    <td class = "align-middle">{{ list_item.id }}</td>
                    <td class = "align-middle">{{ list_item.item }}</td>
                    <td class = "align-middle">{{ list_item.itemAddedAt ? list_item.itemAddedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td class = "align-middle">{{ list_item.itemStatus }}</td>
                    <td class = "align-middle">{{ list_item.itemComment }}</td>
                    <td class = "align-middle">{{ list_item.itemRating }}</td>
                    <td class = "align-middle">{{ list_item.mode }}</td>
                    <td class = "align-middle">{{ list_item.user }}</td>
                    <td class = "align-middle">
                        <a class="btn btn-primary" href="{{ path('app_list_item_show', {'id': list_item.id}) }}">Voir</a>
                        <a class="btn btn-warning" href="{{ path('app_list_item_edit', {'id': list_item.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('app_list_item_new') }}">Cr√©er un nouveau ListItem</a>
    </div>
{% endblock %}
