{% extends 'base.html.twig' %}

{% block title %}Modes{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1>Liste des Modes</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for mode in modes %}
                <tr>
                    <td class = "align-middle">{{ mode.id }}</td>
                    <td class = "align-middle">{{ mode.name }}</td>
                    <td class = "align-middle">
                        <a class="btn btn-primary" href="{{ path('app_mode_show', {'id': mode.id}) }}">Voir</a>
                        <a class="btn btn-warning" href="{{ path('app_mode_edit', {'id': mode.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Pas de Modes trouv√©s</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('app_mode_new') }}">Ajouter un nouveau Mode</a>
    </div>
{% endblock %}
