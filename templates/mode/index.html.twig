{% extends 'base.html.twig' %}

{% block title %}Mode index{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1>Mode index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for mode in modes %}
                <tr>
                    <td class = "align-middle">{{ mode.id }}</td>
                    <td class = "align-middle">{{ mode.name }}</td>
                    <td class = "align-middle">
                        <a class="btn btn-primary" href="{{ path('app_mode_show', {'id': mode.id}) }}">show</a>
                        <a class="btn btn-warning" href="{{ path('app_mode_edit', {'id': mode.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('app_mode_new') }}">Create new</a>
    </div>
{% endblock %}
