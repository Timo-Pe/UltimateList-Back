{% extends 'base.html.twig' %}

{% block title %}Modes{% endblock %}

{% block body %}
    <div class="container my-4">
        {{ include('_flash_messages.html.twig') }}
        <h1>Liste des Modes</h1>
        <a class="btn btn-success" href="{{ path('app_mode_new') }}">Créer un nouveau Mode</a>


        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Couleur</th>
                    <th>Slug</th>
                    <th>Plateformes</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for mode in modes %}
                <tr>
                    <td class = "align-middle">{{ mode.id }}</td>
                    <td class = "align-middle">{{ mode.name }}</td>
                    <td class = "align-middle">{{ mode.color }}</td>
                    <td class = "align-middle">{{ mode.slug }}</td>
                    <td class = "align-middle">
                    {% for platform in mode.platforms %}
                    {{ platform }}
                    {% if loop.index < loop.length %}
                     , 
                    {% endif %}
                    {% endfor %}
                    </td>
                    <td class = "align-middle">
                        <a class="btn btn-primary" href="{{ path('app_mode_show', {'id': mode.id}) }}">Voir</a>
                        <a class="btn btn-warning" href="{{ path('app_mode_edit', {'id': mode.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Pas de Modes trouvés</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
