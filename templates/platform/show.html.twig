{% extends 'base.html.twig' %}

{% block title %}Platform{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1>Platform</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ platform.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ platform.name }}</td>
                </tr>
                <tr>
                    <th>Modes</th>
                    <td>
                        {% for mode in platform.modes %}
                            {{ mode }}
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Items</th>
                    <td>
                    {% for item in platform.items %}
                        {{ item }} /              
                    {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('app_platform_index') }}">Retourner Ã  la liste</a>

        <a class="btn btn-warning" href="{{ path('app_platform_edit', {'id': platform.id}) }}">Editer</a>

        {{ include('platform/_delete_form.html.twig') }}
    </div>
{% endblock %}
