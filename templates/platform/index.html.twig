{% extends 'base.html.twig' %}

{% block title %}Platform index{% endblock %}

{% block body %}
<div class="container my-4">
    <h1>Platform index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for platform in platforms %}
            <tr>
                <td class = "align-middle" >{{ platform.id }}</td>
                <td class = "align-middle" >{{ platform.name }}</td>
                <td class = "align-middle">
                    <a class="btn btn-primary" href="{{ path('app_platform_show', {'id': platform.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_platform_edit', {'id': platform.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_platform_new') }}">Create new</a>
</div>
{% endblock %}
