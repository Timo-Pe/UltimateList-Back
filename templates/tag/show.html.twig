{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1>Tag</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ tag.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ tag.name }}</td>
                </tr>
                <tr>
                    <th>Couleur</th>
                    <td>{{ tag.color }}</td>
                </tr>
            </tbody>
        </table>
        <div class ="d-flex gap-1 text-center display-inline">
            <a class="btn btn-sm btn-success" href="{{ path('app_tag_index') }}"><ion-icon name="return-down-back-outline"></ion-icon></a>
            <a class="btn btn-sm btn-warning" href="{{ path('app_tag_edit', {'id': tag.id}) }}"><ion-icon name="create-outline"></a>
            {{ include('tag/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
