{% extends 'base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}

    {% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    {% endfor %}
    
    <div class="container my-4">
        <h1>Tag index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
                <tr>
                    <td class = "align-middle">{{ tag.id }}</td>
                    <td class = "align-middle">{{ tag.name }}</td>
                    <td class = "align-middle">
                        <a class="btn btn-primary" href="{{ path('app_tag_show', {'id': tag.id}) }}">show</a>
                        <a class="btn btn-warning" href="{{ path('app_tag_edit', {'id': tag.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('app_tag_new') }}">Create new</a>
    </div>
{% endblock %}
