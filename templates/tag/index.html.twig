{% extends 'base.html.twig' %}

{% block title %}Tags{% endblock %}

{% block body %}
    <div class="container my-4">
        {{ include('_flash_messages.html.twig') }}
    
        <h1>Liste des Tags</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Couleur</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
                <tr>
                    <td class = "align-middle">{{ tag.id }}</td>
                    <td class = "align-middle">{{ tag.name }}</td>
                    <td class = "align-middle">{{ tag.color }}</td>
                    <td class = "align-middle">
                        <a class="btn btn-primary" href="{{ path('app_tag_show', {'id': tag.id}) }}">Voir</a>
                        <a class="btn btn-warning" href="{{ path('app_tag_edit', {'id': tag.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Pas de Tags trouvés</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('app_tag_new') }}">Créer un nouveau Tag</a>
    </div>
{% endblock %}
