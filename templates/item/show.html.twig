{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <div class="container my-4">
    <h1>Item</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ item.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ item.description }}</td>
            </tr>
            <tr>
                <th>Sortie</th>
                <td>{{ item.releaseDate ? item.releaseDate|date("d-m-Y")}}</td>
            </tr>
            <tr>
                <th>Producteur</th>
                <td>{{ item.productor }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ item.autor }}</td>
            </tr>
            <tr>
                <th>Animateur</th>
                <td>{{ item.host }}</td>
            </tr>
            <tr>
                <th>Developpeur</th>
                <td>{{ item.developer }}</td>
            </tr>
            <tr>
                <th>Editeur</th>
                <td>{{ item.editor }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td> <img src={{ item.image }} style="max-width: 50%; height: auto;"></td>
            </tr>
             <tr>
                <th>Background Image</th>
                <td> <img src={{ item.backgroundImage }} style="max-width: 50%; height: auto;"></td>
            </tr>
            <tr>
                <th>Mode</th>
                <td>
                    {{ item.mode }}              
                </td>
            </tr>
            <tr>
                <th>Plateformes</th>
                <td>
                {% for platform in item.platforms %}
                    {{ platform }}   
                    {% if loop.index < loop.length %}
                         , 
                    {% endif %}           
                {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>
                {% for tag in item.tags %}
                    {{ tag }}          
                    {% if loop.index < loop.length %}
                         , 
                    {% endif %}    
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
   
    <div class ="d-flex gap-1 text-center display-inline">
        <a class="btn btn-sm btn-success" href="{{ path('app_item_index') }}"><ion-icon name="return-down-back-outline"></ion-icon></a>
        <a class="btn btn-sm btn-warning" href="{{ path('app_item_edit', {'id': item.id}) }}"><ion-icon name="create-outline"></a>
        {{ include('item/_delete_form.html.twig') }}
    </div>
    </div>
{% endblock %}
