{% extends 'base.html.twig' %}

{% block title %}Item index{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1>Item index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Release_date</th>
                    <th>Productor</th>
                    <th>Autor</th>
                    <th>Host</th>
                    <th>Developer</th>
                    <th>Editor</th>
                    <th>Image</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td class = "align-middle">{{ item.id }}</td>
                    <td class = "align-middle">{{ item.name }}</td>
                    <td class = "align-middle">{{ item.description }}</td>
                    <td class = "align-middle">{{ item.releaseDate ? item.releaseDate|date('Y-m-d') : '' }}</td>
                    <td class = "align-middle">{{ item.productor }}</td>
                    <td class = "align-middle">{{ item.autor }}</td>
                    <td class = "align-middle">{{ item.host }}</td>
                    <td class = "align-middle">{{ item.developer }}</td>
                    <td class = "align-middle">{{ item.editor }}</td>
                    <td class = "align-middle">{{ item.image }}</td>
                    <td class = "align-middle">
                        <a class="btn btn-primary" href="{{ path('app_item_show', {'id': item.id}) }}">show</a>
                        <a class="btn btn-warning" href="{{ path('app_item_edit', {'id': item.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="11">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('app_item_new') }}">Create new</a>
    </div>
{% endblock %}
