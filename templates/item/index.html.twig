{% extends 'base.html.twig' %}

{% block title %}Item index{% endblock %}

{% block body %}
    <h1>Item index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Release_date</th>
                <th>Productor</th>
                <th>Autor</th>
                <th>Host</th>
                <th>Developer</th>
                <th>Editor</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.name }}</td>
                <td>{{ item.description }}</td>
                <td>{{ item.releaseDate ? item.releaseDate|date('Y-m-d') : '' }}</td>
                <td>{{ item.productor }}</td>
                <td>{{ item.autor }}</td>
                <td>{{ item.host }}</td>
                <td>{{ item.developer }}</td>
                <td>{{ item.editor }}</td>
                <td>{{ item.image }}</td>
                <td>
                    <a href="{{ path('app_item_show', {'id': item.id}) }}">show</a>
                    <a href="{{ path('app_item_edit', {'id': item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_item_new') }}">Create new</a>
{% endblock %}
