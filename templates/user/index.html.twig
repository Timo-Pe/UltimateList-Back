{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <div class="container my-4">
        {{ include('_flash_messages.html.twig') }}
        <h1>Liste des Users</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Roles</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td  class = "align-middle">{{ user.id }}</td>
                    <td  class = "align-middle">{{ user.username }}</td>
                    <td  class = "align-middle">{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td  class = "align-middle">{{ user.email }}</td>
                    <td  class = "align-middle">
                        <a class="btn btn-primary" href="{{ path('app_user_show', {'id': user.id}) }}">Voir</a>
                        <a class="btn btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Pas de Users trouvés</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('app_user_new') }}">Créer un nouveau User</a>
    </div>
{% endblock %}
