{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <div class="container my-4">
        {{ include('_flash_messages.html.twig') }}

        <div class="d-flex justify-content-between mb-4">
            <h1>Liste des Users</h1>
            <a class="btn btn-success align-self-center" href="{{ path('app_user_new') }}">Créer un nouveau User</a>
        </div>

        <h5 class="mt-4 mb-2">Filtrer par Role :</h5>

        <div class="mb-4 d-flex align-items-center gap-1">
            <a class="btn btn-sm btn-primary" href="{{ path('app_user_index_role', {'role': '["ROLE_USER","ROLE_ADMIN"]' }) }}">Admin</a>
            <a class="btn btn-sm btn-primary" href="{{ path('app_user_index_role', {'role': '["ROLE_USER"]' }) }}">User</a>
            <a class="btn btn-sm btn-warning" href="{{ path('app_user_index') }}">Tout voir</a>
        </div>

        <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Dropdown button
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#">Action</a>
            <a class="dropdown-item" href="#">Another action</a>
            <a class="dropdown-item" href="#">Something else here</a>
        </div>
        </div>


        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Roles</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td  class = "align-middle">{{ user.id }}</td>
                    <td  class = "align-middle">{{ user.username }}</td>
                    <td  class = "align-middle">{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td  class = "align-middle">{{ user.email }}</td>
                    <td  class = "d-flex justify-content mb-4 align-middle align-center gap-1">
                        <a class="btn btn-sm btn-primary" href="{{ path('app_user_show', {'id': user.id}) }}"><ion-icon name="eye-outline"></ion-icon></a>
                        <a class="btn btn-sm btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}"><ion-icon name="create-outline"></a>
                        {{ include('user/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Pas de Users trouvés</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
