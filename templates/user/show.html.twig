{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1>User</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>                       
                        {% if  user.roles|length < 2 %}
                            User
                        {% else %}
                            Admin
                        {% endif %}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
            </tbody>
        </table>
        <div class ="d-flex gap-1 text-center display-inline">
            <a class="btn btn-sm btn-success" href="{{ path('app_user_index') }}"><ion-icon name="return-down-back-outline"></ion-icon></a>
            <a class="btn btn-sm btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}"><ion-icon name="create-outline"></a>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
