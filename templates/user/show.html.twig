{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1>User</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-sm btn-success" href="{{ path('app_user_index') }}"><ion-icon name="return-down-back-outline"></ion-icon></a>

        <a class="btn btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">Editer</a>

        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
